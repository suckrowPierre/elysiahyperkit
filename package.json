{
  "name": "elysiahyperkit",
  "version": "1.0.0",
  "main": "dist/index.js",
  "module": "index.ts",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./serviceHelpers": {
      "import": "./dist/services/helpers.mjs",
      "require": "./dist/services/helpers.js"
    },
    "./templates": {
      "import": "./dist/templates/templates.mjs",
      "require": "./dist/templates/templates.js"
    }
  },
  "description": "A library for Bun Elysia Hyperscript (HTMX or Static) sites",
  "scripts": {
    "build-fast": "tsup src/index.ts src/services/helpers.ts src/templates/templates.ts src/util.ts --format cjs,esm --dts --external bun",
    "build": "bun run build-fast --dts-resolve",
    "release": "bumpp --commit --push --tag && npm publish",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "bun",
    "HTMX",
    "hyperscript",
    "elysia"
  ],
  "license": "MIT",
  "author": "Pierre-Louis Suckrow",
  "devDependencies": {
    "@types/bun": "latest",
    "bumpp": "^9.4.1",
    "tsup": "^8.1.0",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@elysiajs/cors": "^0.8.0",
    "@elysiajs/html": "^0.8.0",
    "@elysiajs/static": "^0.8.1",
    "elysia": "^0.8.17",
    "typed-html": "^3.0.1",
    "yup": "^1.3.3"
  }
}
